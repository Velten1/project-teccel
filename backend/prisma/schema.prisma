generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  cpf       String   @unique
  tel       String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Contact {
  id        Int        @id @default(autoincrement())
  name      String
  email     String
  tel       String
  message   String
  userId    Int?       //nullable
  createdAt DateTime   @default(now())

  @@map("contacts")
}